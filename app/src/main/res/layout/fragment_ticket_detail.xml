<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="360dp"
        android:maxWidth="600dp"
        android:orientation="vertical"
        android:background="#FFF"
        android:padding="32dp"
        android:elevation="8dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/ivAppIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Icono de la app"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvComprobante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comprobante de compra"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#222"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvDetallePedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle del pedido"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#666"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FF9800"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFF3E0"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="center_horizontal"
            android:elevation="2dp">

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha: -"
                android:textColor="#222"/>
            <TextView
                android:id="@+id/tvNro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N° Pedido: -"
                android:textColor="#222"/>
            <TextView
                android:id="@+id/tvPago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Método de pago: -"
                android:textColor="#222"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvProductosLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Productos"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_marginBottom="12dp"
            android:textColor="#333"
            android:background="#F9F9F9"
            android:padding="8dp"
            android:elevation="1dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FF9800"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">
            <TextView
                android:id="@+id/tvSubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal: $-"
                android:textColor="#666"/>
            <TextView
                android:id="@+id/tvEnvio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Envío: $-"
                android:textColor="#666"/>
            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: $-"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#222"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvGracias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Gracias por su compra!"
            android:textColor="#388E3C"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnCerrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar"
            android:backgroundTint="#FF9800"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</LinearLayout>
